<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:text=""
                android:fontFamily="@font/noto_sans"
                android:hint="2019.08.25"
                android:id="@+id/editText"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/text_content" app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/input_column"
                android:textAlignment="center" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:hint="10:00"
                android:fontFamily="@font/noto_sans"
                android:id="@+id/editText2"
                android:textSize="@dimen/text_content" app:layout_constraintStart_toEndOf="@+id/editText"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/editText" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/foodiephoto"
                android:background="@drawable/icon_img"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="8dp"/>
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@drawable/icon_water" android:id="@+id/button_water"
                android:backgroundTint="@color/colorAllTransparent"
                android:scaleType="centerCrop"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/number_water" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodiephoto"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>
        <TextView
                android:text=""
                android:hint="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_water"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@+id/button_water"
                app:layout_constraintBottom_toBottomOf="@+id/button_water"
                app:layout_constraintStart_toEndOf="@+id/button_water" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_fruit"
                android:background="@drawable/round_coners_four"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"/>
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@drawable/icon_vegetable"
                android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                android:id="@+id/button_vegetable"
                app:layout_constraintStart_toEndOf="@+id/number_fruit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/number_vegetable"
                app:layout_constraintTop_toTopOf="@+id/button_fruit"/>
        <TextView
                android:text=""
                android:hint="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_vegetable"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/button_vegetable"
                app:layout_constraintTop_toTopOf="@+id/button_vegetable"
                app:layout_constraintBottom_toBottomOf="@+id/button_vegetable"
                android:background="@drawable/round_coners_four"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"/>
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                app:srcCompat="@drawable/icon_fruit" android:id="@+id/button_fruit"
                app:layout_constraintStart_toEndOf="@+id/number_water"
                app:layout_constraintTop_toTopOf="@+id/button_water" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/number_fruit"/>
        <TextView
                android:text=""
                android:hint="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_fruit"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@+id/button_fruit"
                app:layout_constraintBottom_toBottomOf="@+id/button_fruit"
                app:layout_constraintStart_toEndOf="@+id/button_fruit" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_vegetable"
                android:background="@drawable/round_coners_four"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"/>
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                app:srcCompat="@drawable/icon_coconut" android:id="@+id/button_coconut" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button_water"
                app:layout_constraintStart_toStartOf="@+id/button_water"
        />
        <TextView
                android:text=""
                android:hint="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_coconut"
                app:layout_constraintTop_toTopOf="@+id/button_coconut"
                app:layout_constraintBottom_toBottomOf="@+id/button_coconut" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/number_water"
                android:background="@drawable/round_coners_four"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"/>
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                app:srcCompat="@drawable/icon_protein" android:id="@+id/button_protein"
                app:layout_constraintTop_toTopOf="@+id/button_coconut"
                app:layout_constraintStart_toStartOf="@+id/button_fruit"/>
        <TextView
                android:text=""
                android:hint="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_protein"
                app:layout_constraintTop_toTopOf="@+id/button_protein"
                app:layout_constraintBottom_toBottomOf="@+id/button_protein" android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/number_fruit"
                android:background="@drawable/round_coners_four"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"/>
        <Button
                android:text="@string/foodie_save"
                android:fontFamily="@font/noto_sans"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/button6"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="70dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="70dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button_protein"
                android:textColor="@color/colorWhite"
                android:background="@drawable/save_foodie_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>