<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="2019.08.24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_water"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"
                android:textSize="@dimen/text_content"
                android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                app:layout_constraintStart_toEndOf="@+id/button_water"
                app:layout_constraintTop_toTopOf="@+id/button_water" android:textAlignment="center"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toEndOf="@+id/number_water"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/number_water"
                app:layout_constraintBottom_toBottomOf="@+id/number_water" android:layout_marginStart="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>