            android:layout_height="60dp"
            android:paddingLeft="@dimen/default_screen_padding"
            android:paddingTop="@dimen/_12sdp"
            android:paddingRight="@dimen/default_screen_padding"
            android:paddingBottom="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- prev button -->
            <ImageView
                android:id="@+id/toBack"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@mipmap/ic_arrow_left"
                android:tint="@color/colorMyType" />

            <!-- date title -->
            <TextView
                    android:id="@+id/itemDate"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/toNext"
                    android:layout_toRightOf="@+id/toBack"
                    android:gravity="center"
                    android:hint="2018.12"
                    android:letterSpacing="0.15"
                    android:text='@{viewModel.dateM}'
                    android:textColor="@color/colorMyType"
                    android:textSize="@dimen/text_content" />

            <!-- next button -->
            <ImageView
                android:id="@+id/toNext"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@mipmap/ic_forward"
                android:tint="@color/colorMyType" />
        </RelativeLayout>

