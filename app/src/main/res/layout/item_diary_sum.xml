<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="com.terricom.mytype.diary.DiaryViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/diary_date"
                android:text="@{String.valueOf(viewModel.date)}"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:fontFamily="@font/noto_sans"
                android:textColorHint="@color/colorButton"
                android:paddingLeft="@dimen/elevation_all" android:textSize="@dimen/text_content"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/input_column"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"/>

        <TextView
                android:text="@string/diary_title_today_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/diary_title_total_foodie"
                android:textSize="@dimen/text_content_title"
                android:textColor="@color/colorMyType"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/water_layout"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:text="@string/diary_title_today_compliment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/diary_title_total_nutrition"
                android:textSize="@dimen/text_content_title"
                android:textColor="@color/colorMyType"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="@+id/diary_date"
                app:layout_constraintTop_toBottomOf="@+id/diary_date" android:layout_marginTop="8dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/water_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/oil_layout"
                android:layout_marginTop="8dp">
            <TextView
                    android:text="@{String.valueOf(viewModel.totalWater)}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/number_water"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:paddingTop="@dimen/dialog_padding"
                    android:paddingBottom="@dimen/dialog_padding"
                    android:textSize="@dimen/text_content"
                    android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                    android:textAlignment="viewEnd"
                    android:drawableStart="@drawable/icon_water"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@id/water_layout"
                android:id="@+id/oil_layout"
                app:layout_constraintStart_toEndOf="@+id/water_layout"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/vagetable_layout">
            <TextView
                    android:text="@{String.valueOf(viewModel.totalOil)}"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_oil"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:paddingTop="@dimen/dialog_padding"
                    android:paddingBottom="@dimen/dialog_padding"
                    android:textSize="@dimen/text_content"
                    android:drawableStart="@drawable/icon_coconut"
                    android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                    android:textAlignment="viewEnd"
                    tools:layout_editor_absoluteY="84dp" tools:layout_editor_absoluteX="78dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/oil_layout"
                android:id="@+id/vagetable_layout"
                app:layout_constraintStart_toEndOf="@+id/oil_layout"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/protein_layout">
            <TextView
                    android:text="@{String.valueOf(viewModel.totalVegetable)}"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_vegetable"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:paddingTop="@dimen/dialog_padding"
                    android:paddingBottom="@dimen/dialog_padding"
                    android:textSize="@dimen/text_content"
                    android:drawableStart="@drawable/icon_vegetable"
                    android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                    android:textAlignment="viewEnd"
                    tools:layout_editor_absoluteY="84dp" tools:layout_editor_absoluteX="140dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/vagetable_layout"
                android:id="@+id/protein_layout"
                app:layout_constraintStart_toEndOf="@+id/vagetable_layout"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/fruit_layout">
            <TextView
                    android:text="@{String.valueOf(viewModel.totalProtein)}"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_protein"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:paddingTop="@dimen/dialog_padding"
                    android:paddingBottom="@dimen/dialog_padding"
                    android:textSize="@dimen/text_content"
                    android:drawableStart="@drawable/icon_protein"
                    android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                    android:textAlignment="viewEnd"
                    tools:layout_editor_absoluteY="84dp" tools:layout_editor_absoluteX="202dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/protein_layout"
                android:id="@+id/fruit_layout"
                app:layout_constraintStart_toEndOf="@+id/protein_layout"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/carbon_layout">
            <TextView
                    android:text="@{String.valueOf(viewModel.totalFruit)}"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_fruit"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:paddingTop="@dimen/dialog_padding"
                    android:paddingBottom="@dimen/dialog_padding"
                    android:textSize="@dimen/text_content"
                    android:drawableStart="@drawable/icon_fruit"
                    android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                    android:textAlignment="viewEnd"
                    tools:layout_editor_absoluteY="84dp" tools:layout_editor_absoluteX="272dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/fruit_layout"
                android:id="@+id/carbon_layout"
                app:layout_constraintStart_toEndOf="@+id/fruit_layout"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView
                    android:text="@{String.valueOf(viewModel.totalCarbon)}"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_carbon"
                    android:paddingLeft="@dimen/dialog_padding"
                    android:paddingRight="@dimen/dialog_padding"
                    android:paddingTop="@dimen/dialog_padding"
                    android:paddingBottom="@dimen/dialog_padding"
                    android:textSize="@dimen/text_content"
                    android:drawableStart="@drawable/icon_carbon"
                    android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                    android:textAlignment="viewEnd"
                    tools:layout_editor_absoluteY="84dp" tools:layout_editor_absoluteX="334dp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>