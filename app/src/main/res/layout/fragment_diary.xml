<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/img_diary" android:id="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop" android:alpha="@dimen/transparent_30_percent"
        />
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="56dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:orientation="vertical">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/diary_date"
                        android:hint="2019.08.24"
                        android:paddingEnd="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingStart="@dimen/dialog_padding"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="14sp"
                        android:background="@drawable/round_coners_four"/>
                <TextView
                        android:text="@string/diary_title_sleep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/dialog_padding"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingEnd="@dimen/dialog_padding"
                        android:id="@+id/diary_title_sleep_time" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/diary_date"
                        android:layout_marginTop="8dp" android:textColor="@color/colorOrangeSave"
                        android:fontFamily="@font/noto_sans" android:background="@drawable/round_coners_four"
                        android:textSize="18sp"/>

                <EditText
                        android:layout_width="90dp"
                        android:layout_height="29dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/diary_time_sleep"
                        android:hint="23:30"
                        android:paddingStart="@dimen/dialog_padding"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingEnd="@dimen/dialog_padding"
                        android:background="@drawable/round_coners_four"
                        app:layout_constraintStart_toEndOf="@+id/diary_title_sleep_time"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/diary_title_sleep_time"
                        app:layout_constraintBottom_toBottomOf="@+id/diary_title_sleep_time"
                        android:textAlignment="center" android:textSize="14sp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/diary_time_wakeup"
                        android:background="@drawable/round_coners_four"
                        android:paddingStart="@dimen/dialog_padding"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingEnd="@dimen/dialog_padding"
                        android:hint="7:00"
                        app:layout_constraintBottom_toBottomOf="@+id/diary_time_sleep"
                        app:layout_constraintTop_toTopOf="@+id/diary_time_sleep"
                        app:layout_constraintStart_toEndOf="@+id/diary_time_sleep"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" android:textAlignment="center" android:textSize="14sp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_sleep_time"
                        android:layout_marginTop="8dp" android:id="@+id/recyclerView"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp" app:srcCompat="@drawable/icon_water" android:id="@+id/button_water"
                        android:backgroundTint="@color/colorAllTransparent"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_water"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text=""
                        android:hint="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_water"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="@+id/button_water"
                        app:layout_constraintBottom_toBottomOf="@+id/button_water"
                        app:layout_constraintStart_toEndOf="@+id/button_water"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/button_fruit"
                        android:background="@drawable/round_coners_four"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp" app:srcCompat="@drawable/icon_vegetable"
                        android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                        android:id="@+id/button_vegetable"
                        app:layout_constraintStart_toEndOf="@+id/number_fruit"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_vegetable"
                        app:layout_constraintTop_toTopOf="@+id/button_fruit"/>
                <TextView
                        android:text=""
                        android:hint="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_vegetable"
                        android:textSize="20sp"
                        app:layout_constraintStart_toEndOf="@+id/button_vegetable"
                        app:layout_constraintTop_toTopOf="@+id/button_vegetable"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/button_vegetable" android:layout_marginEnd="8dp"
                        android:background="@drawable/round_coners_four"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_fruit" android:id="@+id/button_fruit"
                        app:layout_constraintStart_toEndOf="@+id/number_water"
                        app:layout_constraintTop_toTopOf="@+id/button_water" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_fruit"/>
                <TextView
                        android:text=""
                        android:hint="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_fruit"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="@+id/button_fruit"
                        app:layout_constraintBottom_toBottomOf="@+id/button_fruit"
                        app:layout_constraintStart_toEndOf="@+id/button_fruit" android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/button_vegetable"
                        android:background="@drawable/round_coners_four"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_coconut" android:id="@+id/button_coconut"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/button_water"
                        app:layout_constraintStart_toStartOf="@+id/button_water"
                />
                <TextView
                        android:text=""
                        android:hint="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_coconut"
                        app:layout_constraintTop_toTopOf="@+id/button_coconut"
                        app:layout_constraintBottom_toBottomOf="@+id/button_coconut" android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@+id/number_water"
                        android:background="@drawable/round_coners_four"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"/>
                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/colorAllTransparent" android:scaleType="centerCrop"
                        app:srcCompat="@drawable/icon_protein" android:id="@+id/button_protein"
                        app:layout_constraintTop_toTopOf="@+id/button_coconut"
                        app:layout_constraintStart_toStartOf="@+id/button_fruit"/>
                <TextView
                        android:text=""
                        android:hint="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_protein"
                        app:layout_constraintTop_toTopOf="@+id/button_protein"
                        app:layout_constraintBottom_toBottomOf="@+id/button_protein" android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@+id/number_fruit"
                        android:background="@drawable/round_coners_four"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"/>
                <TextView
                        android:text="@string/diary_title_mood_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/dialog_padding"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingEnd="@dimen/dialog_padding"
                        android:id="@+id/diary_title_mood_memo" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/button_coconut"
                        android:textColor="@color/colorOrangeSave"
                        android:fontFamily="@font/noto_sans" android:background="@drawable/round_coners_four"
                        android:textSize="18sp" android:layout_marginTop="8dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text=""
                        android:hint="今天聚餐沒有點套餐 覺得棒棒ㄉ"
                        android:ems="10"
                        android:id="@+id/diary_content_mood_memo" android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_mood_memo" android:textSize="14sp"
                        android:background="@drawable/round_coners_four"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="@string/diary_title_nutrient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/dialog_padding"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingEnd="@dimen/dialog_padding"
                        android:id="@+id/diary_title_nutrient" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_content_mood_memo"
                        android:textColor="@color/colorOrangeSave"
                        android:fontFamily="@font/noto_sans" android:background="@drawable/round_coners_four"
                        android:textSize="18sp" android:layout_marginTop="8dp"/>
                <CheckBox
                        android:text="葉黃素"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/diary_checkBox_lutenite"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_nutrient"
                        android:paddingRight="@dimen/dialog_padding"
                        android:background="@drawable/round_coners_four"
                        android:fontFamily="@font/noto_sans"/>

                <CheckBox
                        android:text="B 群"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/diary_checkBox_vitaminB"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_nutrient"
                        android:paddingRight="@dimen/dialog_padding"
                        android:background="@drawable/round_coners_four"
                        android:fontFamily="@font/noto_sans"
                        app:layout_constraintStart_toEndOf="@+id/diary_checkBox_lutenite"/>

                <CheckBox
                        android:text="維他命 C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/diary_checkBox_vitaminC"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_nutrient"
                        android:background="@drawable/round_coners_four" android:paddingRight="@dimen/dialog_padding"
                        android:fontFamily="@font/noto_sans"
                        app:layout_constraintStart_toEndOf="@+id/diary_checkBox_vitaminB"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>