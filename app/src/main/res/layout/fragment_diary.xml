<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:orientation="vertical">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:id="@+id/diary_date"
                        android:hint="2019.08.24"
                        android:paddingBottom="@dimen/elevation_all"
                        android:paddingTop="@dimen/elevation_all"
                        android:paddingRight="@dimen/elevation_all"
                        android:fontFamily="@font/noto_sans"
                        android:textColorHint="@color/colorButton"
                        android:paddingLeft="@dimen/elevation_all" android:textSize="@dimen/text_content"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/input_column"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/diary_title_sleeptime"
                        android:layout_marginStart="16dp" android:textAlignment="center"/>
                <TextView
                        android:text="@string/diary_title_sleep_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_title_sleeptime"
                        android:textSize="@dimen/text_content_title"
                        android:textColor="@color/colorMyType"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="@+id/diary_date"
                        app:layout_constraintTop_toTopOf="@+id/diary_date"
                        app:layout_constraintStart_toEndOf="@+id/diary_date"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/diary_time_sleep" android:layout_marginStart="8dp"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="29dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/diary_time_sleep"
                        android:hint="23:30"
                        android:paddingBottom="@dimen/elevation_all"
                        android:paddingTop="@dimen/elevation_all"
                        android:paddingRight="@dimen/elevation_all"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="@dimen/text_content"
                        app:layout_constraintTop_toTopOf="@+id/diary_title_sleeptime"
                        app:layout_constraintBottom_toBottomOf="@+id/diary_title_sleeptime"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorButton"
                        android:background="@drawable/input_column"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintStart_toEndOf="@+id/diary_title_sleeptime"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/diary_time_wakeup" android:layout_marginStart="8dp"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/diary_time_wakeup"
                        android:background="@drawable/input_column"
                        android:paddingBottom="@dimen/elevation_all"
                        android:paddingTop="@dimen/elevation_all"
                        android:paddingRight="@dimen/elevation_all"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="@dimen/text_content"
                        android:hint="7:00"
                        android:textColorHint="@color/colorButton"
                        app:layout_constraintBottom_toBottomOf="@+id/diary_time_sleep"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintTop_toTopOf="@+id/diary_time_sleep"
                        app:layout_constraintStart_toEndOf="@+id/diary_time_sleep"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:layout_marginStart="8dp"/>

                <TextView
                        android:text="@string/diary_title_today_record"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_title_total_foodie"
                        android:textSize="@dimen/text_content_title"
                        android:textColor="@color/colorMyType"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toStartOf="@+id/diary_date"
                        app:layout_constraintTop_toBottomOf="@+id/diary_date" android:layout_marginTop="8dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        tools:listitem="@layout/item_diary_record"
                        android:id="@+id/recyclerView"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_foodie"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
                <TextView
                        android:text="@string/diary_title_today_compliment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_title_total_nutrition"
                        android:textSize="@dimen/text_content_title"
                        android:textColor="@color/colorMyType"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toStartOf="@+id/diary_date"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerView" android:layout_marginTop="8dp"/>
                <TextView
                        android:text="6.0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_water"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:textSize="@dimen/text_content"
                        android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                        android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:textAlignment="viewEnd"
                        app:layout_constraintStart_toEndOf="@+id/iwater" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_oil"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/icon_water"
                        android:id="@+id/iwater"
                        app:layout_constraintTop_toTopOf="@+id/number_water"
                        app:layout_constraintBottom_toBottomOf="@+id/number_water" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/number_water"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="@+id/number_water" android:layout_marginEnd="38dp"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="6.0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_oil"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:textSize="@dimen/text_content"
                        android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/number_water"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_vegetable" android:textAlignment="viewEnd"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/icon_coconut"
                        android:id="@+id/oil"
                        app:layout_constraintTop_toTopOf="@+id/number_oil"
                        app:layout_constraintBottom_toBottomOf="@+id/number_oil" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/number_oil"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="@+id/number_oil" android:layout_marginEnd="38dp"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="6.0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_vegetable"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:textSize="@dimen/text_content"
                        android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/number_oil" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_protein" android:textAlignment="viewEnd"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/icon_vegetable"
                        android:id="@+id/vegetable"
                        app:layout_constraintTop_toTopOf="@+id/number_vegetable"
                        app:layout_constraintBottom_toBottomOf="@+id/number_vegetable" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/number_vegetable"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="@+id/number_vegetable" android:layout_marginEnd="38dp"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="6.0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_protein"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:textSize="@dimen/text_content"
                        android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/number_vegetable"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_fruit" android:textAlignment="viewEnd"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/icon_protein"
                        android:id="@+id/protein"
                        app:layout_constraintTop_toTopOf="@+id/number_protein"
                        app:layout_constraintBottom_toBottomOf="@+id/number_protein" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/number_protein"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="@+id/number_protein" android:layout_marginEnd="38dp"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="6.0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_fruit"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:textSize="@dimen/text_content"
                        android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/number_protein"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/number_carbon" android:textAlignment="viewEnd"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/icon_fruit"
                        android:id="@+id/fruit"
                        app:layout_constraintTop_toTopOf="@+id/number_fruit"
                        app:layout_constraintBottom_toBottomOf="@+id/number_fruit" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="@+id/number_fruit"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="@+id/number_fruit" android:layout_marginEnd="38dp"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="6.0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_carbon"
                        android:paddingLeft="@dimen/dialog_padding"
                        android:paddingRight="@dimen/dialog_padding"
                        android:paddingTop="@dimen/dialog_padding"
                        android:paddingBottom="@dimen/dialog_padding"
                        android:textSize="@dimen/text_content"
                        android:background="@drawable/round_coners_four" android:textColor="@color/colorMyType"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_total_nutrition"
                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/number_fruit"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:textAlignment="viewEnd"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp" app:srcCompat="@drawable/icon_carbon"
                        android:id="@+id/carbon"
                        app:layout_constraintTop_toTopOf="@+id/number_carbon"
                        app:layout_constraintBottom_toBottomOf="@+id/number_carbon"
                        app:layout_constraintEnd_toEndOf="@+id/number_carbon"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="@+id/number_carbon" android:layout_marginEnd="38dp"
                        android:layout_marginStart="4dp" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                <TextView
                        android:text="@string/diary_title_mood_memo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_title_mood_memo"
                        android:textSize="@dimen/text_content_title"
                        android:textColor="@color/colorMyType"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toStartOf="@+id/diary_date"
                        app:layout_constraintTop_toBottomOf="@+id/nutrition"
                />
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="今天聚餐沒有點套餐 覺得棒棒ㄉ"
                        android:textColor="@color/colorWhite"
                        android:ems="10"
                        android:id="@+id/diary_content_mood_memo" android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_mood_memo" android:textSize="14sp"
                        android:background="@drawable/input_column"
                        android:paddingLeft="@dimen/elevation_all"
                        android:paddingRight="@dimen/elevation_all"
                        android:paddingStart="@dimen/elevation_all"
                        android:paddingTop="@dimen/elevation_all"
                        android:paddingBottom="@dimen/elevation_all"
                        android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="@string/diary_title_nutrient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/diary_title_nutrient"
                        android:textSize="@dimen/text_content_title"
                        android:textColor="@color/colorMyType"
                        android:textAlignment="viewStart"
                        app:layout_constraintStart_toStartOf="@+id/diary_date"
                        app:layout_constraintTop_toBottomOf="@+id/number_water" android:layout_marginTop="16dp"/>
                <com.google.android.material.chip.ChipGroup
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        app:layout_constraintTop_toBottomOf="@+id/diary_title_nutrient"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:id="@+id/nutrition" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp">
                    <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/chip2"
                            android:text="葉黃素" android:background="@drawable/button_background"
                            android:paddingBottom="@dimen/elevation_all"
                            android:paddingTop="@dimen/elevation_all"
                            android:paddingRight="@dimen/elevation_all"
                            android:paddingLeft="@dimen/elevation_all"
                            android:textSize="@dimen/text_content"
                            android:textColor="@color/colorWhite"/>
                    <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/chip3"
                            android:text="B 群" android:background="@drawable/button_background"
                            android:paddingBottom="@dimen/elevation_all"
                            android:paddingTop="@dimen/elevation_all"
                            android:paddingRight="@dimen/elevation_all"
                            android:paddingLeft="@dimen/elevation_all"
                            android:textSize="@dimen/text_content"
                            android:textColor="@color/colorWhite"/>
                    <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/chip4"
                            android:text="維他命 C" android:background="@drawable/button_background"
                            android:paddingBottom="@dimen/elevation_all"
                            android:paddingTop="@dimen/elevation_all"
                            android:paddingRight="@dimen/elevation_all"
                            android:paddingLeft="@dimen/elevation_all"
                            android:textSize="@dimen/text_content"
                            android:textColor="@color/colorWhite"/>
                    <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/foodie_add_food" android:id="@+id/create_new_food"
                            android:background="@drawable/button_background"
                            android:paddingBottom="@dimen/elevation_all"
                            android:paddingTop="@dimen/elevation_all"
                            android:paddingRight="@dimen/elevation_all"
                            android:paddingLeft="@dimen/elevation_all"
                            android:textSize="@dimen/text_content"
                            android:textColor="@color/colorWhite"
                            app:closeIconVisible="false"
                            app:chipIcon="@android:drawable/ic_input_add"/>
                </com.google.android.material.chip.ChipGroup>

                <Button
                        android:text="@string/foodie_save"
                        android:fontFamily="@font/noto_sans"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/button_foodie_save"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/colorButton"
                        android:paddingBottom="@dimen/elevation_all"
                        android:paddingTop="@dimen/elevation_all"
                        android:paddingRight="@dimen/elevation_all"
                        android:paddingLeft="@dimen/elevation_all" android:textSize="@dimen/text_content"
                        app:layout_constraintTop_toBottomOf="@+id/diary_content_mood_memo"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        android:layout_marginTop="24dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>