<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="shape" type="com.terricom.mytype.data.Shape"/>
        <variable name="viewModel" type="com.terricom.mytype.diary.DiaryViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/diary_title_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/time"
                android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:textSize="@dimen/text_content_title"
                android:textAlignment="center"/>
        <TextView
                android:text='@{"體重"+String.valueOf(viewModel.fireShape.weight)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/number_weight"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all"
                android:textSize="@dimen/text_content"
                android:letterSpacing="0.15"

                android:textAlignment="center"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/time"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/number_body_water"/>
        <TextView
                android:text='@{"含水量"+String.valueOf(viewModel.fireShape.bodyWater)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/number_body_water"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all" app:layout_constraintTop_toTopOf="@+id/number_weight"
                android:textSize="@dimen/text_content"
                android:letterSpacing="0.15"

                app:layout_constraintStart_toEndOf="@+id/number_weight" android:layout_marginStart="8dp"
                android:textAlignment="center" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/number_body_fat"/>
        <TextView
                android:text='@{"體脂"+String.valueOf(viewModel.fireShape.bodyFat)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/number_body_fat"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all"
                android:textSize="@dimen/text_content"
                android:letterSpacing="0.15"

                app:layout_constraintStart_toEndOf="@+id/number_body_water" android:layout_marginStart="8dp"
                android:textAlignment="center" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/time" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text='@{"日代謝"+String.valueOf(viewModel.fireShape.tdee)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/number_tdeet"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all"
                android:textSize="@dimen/text_content"
                android:letterSpacing="0.15"

                android:layout_marginStart="8dp"
                android:textAlignment="center" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/number_weight" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/number_muscle"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
        <TextView
                android:text='@{"肌肉量"+String.valueOf(viewModel.fireShape.muscle)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/number_muscle"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all"
                android:textSize="@dimen/text_content"
                android:letterSpacing="0.15"

                app:layout_constraintStart_toEndOf="@+id/number_tdeet" android:layout_marginStart="8dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="@+id/number_tdeet" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/number_body_age"/>
        <TextView
                android:text='@{"體年齡"+String.valueOf(viewModel.fireShape.bodyAge)}'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/number_body_age"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all" android:textColor="@color/colorMyType"
                android:elevation="@dimen/elevation_all"
                android:textSize="@dimen/text_content"
                android:letterSpacing="0.15"

                app:layout_constraintStart_toEndOf="@+id/number_muscle"
                android:layout_marginStart="10dp" android:textAlignment="center"
                app:layout_constraintTop_toTopOf="@+id/number_muscle" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>