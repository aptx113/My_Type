<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="nutrition" type="String"/>
        <variable name="viewModel" type="com.terricom.mytype.foodie.FoodieViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/colorWhite">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:text=""
                android:fontFamily="@font/noto_sans"
                android:hint="2019.08.25"
                android:id="@+id/editText"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/text_content" app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/input_column"
                android:textAlignment="center" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:hint="10:00"
                android:fontFamily="@font/noto_sans"
                android:id="@+id/editText2"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
                app:layout_constraintStart_toEndOf="@+id/editText"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/editText" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/foodiephoto"
                android:background="@drawable/icon_img"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="8dp"
                android:scaleType="fitCenter"/>
        <TextView
                android:text="@string/foodie_title_nutrition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/foodie_title_nutrition"
                android:textSize="@dimen/text_content_title"
                android:textColor="@color/colorMyType"
                android:layout_marginStart="16dp"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/foods_recycler"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_foodie_show_info"
                app:layout_constraintStart_toEndOf="@+id/foodie_title_nutrition" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/foodie_title_nutrition"
                app:layout_constraintBottom_toBottomOf="@+id/foodie_title_nutrition"
                android:background="@drawable/button_circle" android:elevation="@dimen/elevation_all"/>
        <TextView
                android:text="i"
                android:fontFamily="@font/noto_sans"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                app:layout_constraintEnd_toEndOf="@+id/button_foodie_show_info"
                app:layout_constraintStart_toStartOf="@+id/button_foodie_show_info"
                app:layout_constraintBottom_toBottomOf="@+id/button_foodie_show_info"
                app:layout_constraintTop_toTopOf="@+id/button_foodie_show_info" android:textColor="@color/black_3f3a3a"
                android:textStyle="bold|italic" android:textAlignment="center"
                android:elevation="5dp"/>
        <ImageButton
                android:layout_width="@dimen/foodie_button_width"
                android:layout_height="@dimen/foodie_button_height" app:srcCompat="@drawable/icon_water"
                android:id="@+id/button_water"
                android:scaleType="fitCenter"
                android:background="@drawable/button_background"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/foodie_title_nutrition"/>
        <TextView
                android:text=""
                android:hint="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_water"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                app:layout_constraintStart_toEndOf="@+id/button_water"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_fruit"
                android:layout_marginStart="8dp" android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@+id/button_water" android:textAlignment="center"/>
        <ImageButton
                android:layout_width="@dimen/foodie_button_width"
                android:layout_height="@dimen/foodie_button_height" app:srcCompat="@drawable/icon_vegetable"
                android:scaleType="fitCenter"
                android:id="@+id/button_vegetable"
                android:background="@drawable/button_background"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
                app:layout_constraintStart_toEndOf="@+id/number_fruit"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/number_vegetable"
                app:layout_constraintTop_toTopOf="@+id/button_water"/>
        <EditText
                android:text=""
                android:hint="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_vegetable"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/button_vegetable" android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/button_water" android:textAlignment="center"/>
        <ImageButton
                android:layout_width="@dimen/foodie_button_width"
                android:layout_height="@dimen/foodie_button_height"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_fruit" android:id="@+id/button_fruit"
                android:background="@drawable/button_background"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
                app:layout_constraintStart_toEndOf="@+id/number_water"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/number_fruit"
                app:layout_constraintTop_toTopOf="@+id/button_water"/>
        <EditText
                android:text=""
                android:hint="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_fruit"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"
                app:layout_constraintStart_toEndOf="@+id/button_fruit"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_vegetable"
                android:layout_marginStart="8dp" android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@+id/button_water" android:textAlignment="center"/>
        <ImageButton
                android:layout_width="@dimen/foodie_button_width"
                android:layout_height="@dimen/foodie_button_height"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_coconut" android:id="@+id/button_coconut" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button_water"
                app:layout_constraintStart_toStartOf="@+id/button_water"
                android:background="@drawable/button_background"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"/>
        <EditText
                android:text=""
                android:hint="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_coconut"
                app:layout_constraintTop_toTopOf="@+id/button_coconut"
                app:layout_constraintBottom_toBottomOf="@+id/button_coconut"
                app:layout_constraintStart_toStartOf="@+id/number_water"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding" android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/number_water"/>
        <ImageButton
                android:layout_width="@dimen/foodie_button_width"
                android:layout_height="@dimen/foodie_button_height"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_protein" android:id="@+id/button_protein"
                app:layout_constraintTop_toTopOf="@+id/button_coconut"
                app:layout_constraintStart_toStartOf="@+id/button_fruit"
                android:background="@drawable/button_background"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
        />
        <EditText
                android:text=""
                android:hint="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_protein"
                app:layout_constraintTop_toTopOf="@+id/button_protein"
                app:layout_constraintBottom_toBottomOf="@+id/button_protein"
                app:layout_constraintStart_toStartOf="@+id/number_fruit"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding" android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/number_fruit"/>
        <ImageButton
                android:layout_width="@dimen/foodie_button_width"
                android:layout_height="@dimen/foodie_button_height"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_carbon" android:id="@+id/button_carbon"
                app:layout_constraintTop_toTopOf="@+id/button_coconut"
                android:background="@drawable/button_background"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all"
                app:layout_constraintStart_toStartOf="@+id/button_vegetable"/>
        <EditText
                android:text=""
                android:hint="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/number_carbon"
                app:layout_constraintTop_toTopOf="@+id/button_carbon"
                app:layout_constraintBottom_toBottomOf="@+id/button_carbon"
                android:textSize="@dimen/text_content"
                android:background="@drawable/input_column" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" android:paddingLeft="@dimen/dialog_padding"
                android:paddingRight="@dimen/dialog_padding"
                android:paddingTop="@dimen/dialog_padding"
                android:paddingBottom="@dimen/dialog_padding"
                app:layout_constraintVertical_bias="0.538"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@+id/number_vegetable"
                app:layout_constraintEnd_toEndOf="@+id/number_vegetable"/>
        <Button
                android:text="@string/foodie_save"
                android:fontFamily="@font/noto_sans"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/button_foodie_save"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_background" android:layout_marginBottom="56dp"
                android:backgroundTint="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="@dimen/elevation_all"
                android:paddingTop="@dimen/elevation_all"
                android:paddingRight="@dimen/elevation_all"
                android:paddingLeft="@dimen/elevation_all" android:textSize="@dimen/text_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_foodie_food"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/foods_recycler" android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/nutrition"
                android:padding="@dimen/elevation_all"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/chosed_nutrition"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodiephoto" android:layout_marginTop="8dp"
                android:id="@+id/chosed_nutrition" android:background="@drawable/input_column"
                android:padding="@dimen/elevation_all">
        </LinearLayout>
        <EditText
                android:hint="@string/foodie_add_food"
                android:text="@={viewModel.addFood}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nutrition"
                android:background="@drawable/calendar_date" android:fontFamily="@font/noto_sans"
                android:padding="@dimen/elevation_all"
                android:elevation="@dimen/elevation_all"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorMyType" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@+id/foods_recycler"
                app:layout_constraintBottom_toBottomOf="@+id/foods_recycler"
                android:textSize="@dimen/text_content" android:textColorHint="@color/colorMyType"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>