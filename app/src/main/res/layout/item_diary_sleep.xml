<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="sleep" type="com.terricom.mytype.data.Sleep"/>
        <variable name="viewModel" type="com.terricom.mytype.diary.DiaryViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/centerGuide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llBedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/timePicker"
                app:layout_constraintEnd_toStartOf="@+id/centerGuide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/tvBedTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_night_s"
                    android:drawablePadding="8dp"
                    android:letterSpacing="0.2"
                    android:text="@string/sleep_record_bed_time"
                    android:textColor="@color/colorMyType"
                    android:textSize="@dimen/text_content" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:padding="@dimen/elevation_all"/>


            <TextView
                    android:id="@+id/tvBedTime"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/colorMyType"
                    android:textSize="@dimen/text_content"
                    tools:text="12:15 PM" android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvBedTimeLabel"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/tvBedTimeLabel"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llWakeUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/timePicker"
                app:layout_constraintStart_toEndOf="@+id/centerGuide"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/icon_day_s"
                    android:drawablePadding="8dp"
                    android:letterSpacing="0.2"
                    android:text="@string/sleep_record_wake_time"
                    android:textColor="@color/colorMyType"
                    android:textSize="@dimen/text_content"
                    tools:ignore="SmallSp" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tvWakeTimeLabel"
                    app:layout_constraintStart_toStartOf="parent" android:padding="@dimen/elevation_all"/>


            <TextView
                    android:id="@+id/tvWakeTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/colorMyType"
                    android:textSize="@dimen/text_content"
                    tools:text="7:45 AM" android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvWakeTimeLabel" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tvWakeTimeLabel"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>