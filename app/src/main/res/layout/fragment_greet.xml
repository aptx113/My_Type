<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/img_dialog_dream_board"
                android:id="@+id/greet_background" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:scaleType="centerCrop"
        />
        <ImageView
                android:layout_width="170dp"
                android:layout_height="60dp" app:srcCompat="@drawable/round_coners_four"
                android:id="@+id/transparent_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/greet_background"
                app:layout_constraintBottom_toBottomOf="@+id/greet_background" android:layout_marginTop="8dp"
                android:layout_marginBottom="160dp"/>
        <TextView
                android:text="@string/setting_dream_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setting_dream_board"
                app:layout_constraintStart_toStartOf="@+id/transparent_background"
                app:layout_constraintEnd_toEndOf="@+id/transparent_background"
                android:fontFamily="@font/noto_sans" android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="@+id/transparent_background"
                app:layout_constraintBottom_toBottomOf="@+id/transparent_background" android:textAlignment="center"/>
        <Button
                android:text="@string/upload_dream_board"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:fontFamily="@font/noto_sans"
                android:textStyle="bold"
                android:id="@+id/upload_photo" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/setting_dream_board"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="70dp" android:background="@drawable/round_coners_four"
                android:layout_marginEnd="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>