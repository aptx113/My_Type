<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="dialog" type="com.terricom.mytype.query.QueryDialog"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{() -> dialog.dismiss()}">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/calendar_date"
                android:onClick="@{() -> dialog.dismiss()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/centerGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

            <TextView
                    android:id="@+id/text_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/dialog_daily_reference"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_message_content2" />

            <TextView
                    android:id="@+id/text_message_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/dialog_image_definition"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/dialog_water"
                    android:textSize="@dimen/text_content"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toBottomOf="@+id/text_message_content" />

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/dialog_oil"
                    android:textSize="@dimen/text_content"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/text_message_content" />

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/dialog_vegetable"
                    android:textSize="@dimen/text_content"
                    app:layout_constraintEnd_toStartOf="@+id/imageView13"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/dialog_protein"
                    android:textSize="@dimen/text_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/dialog_fruit"
                    android:textSize="@dimen/text_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <!--            <TextView-->
            <!--                    android:id="@+id/textView8"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginTop="16dp"-->
            <!--                    android:layout_marginBottom="16dp"-->
            <!--                    android:fontFamily="@font/noto_sans"-->
            <!--                    android:gravity="center"-->
            <!--                    android:maxLines="2"-->
            <!--                    android:paddingStart="16dp"-->
            <!--                    android:paddingEnd="16dp"-->
            <!--                    android:text="點選營養圖示也可以增加 0.1 單位喔！"-->
            <!--                    android:textSize="@dimen/text_content"-->
            <!--                    app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                    app:layout_constraintEnd_toEndOf="parent"-->
            <!--                    app:layout_constraintStart_toStartOf="parent"-->
            <!--                    app:layout_constraintTop_toBottomOf="@+id/textView6" />-->

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/dialog_carbon"
                    android:textSize="@dimen/text_content"
                    app:layout_constraintStart_toEndOf="@+id/imageView12"
                    app:layout_constraintTop_toTopOf="@+id/imageView12" />

            <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    app:layout_constraintEnd_toStartOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView13"
                    app:layout_constraintTop_toTopOf="@+id/textView3"
                    app:srcCompat="@drawable/icon_coconut" />

            <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                    app:layout_constraintEnd_toStartOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/centerGuide"
                    app:layout_constraintTop_toTopOf="@+id/imageView10"
                    app:srcCompat="@drawable/icon_protein" />

            <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                    app:layout_constraintEnd_toEndOf="@+id/imageView13"
                    app:layout_constraintStart_toStartOf="@+id/centerGuide"
                    app:layout_constraintTop_toTopOf="@+id/imageView11"
                    app:srcCompat="@drawable/icon_carbon" />

            <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="2dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toStartOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:srcCompat="@drawable/icon_water" />

            <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:srcCompat="@drawable/icon_vegetable" />

            <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toStartOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView6"
                    app:srcCompat="@drawable/icon_fruit" />

            <ImageView
                    android:id="@+id/icon_water_goal"
                    android:layout_width="60dp"
                    android:layout_height="0dp"
                    android:background="@drawable/tag_left_corners"
                    android:padding="@dimen/elevation_all"
                    android:paddingTop="@dimen/elevation_all"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/diff_water"
                    app:layout_constraintStart_toStartOf="@+id/diff_water"
                    app:layout_constraintTop_toTopOf="@+id/diff_water"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/icon_water" />

            <TextView
                    android:id="@+id/diff_water"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="@dimen/elevation_all"
                    android:text="@string/foodie_example_fruit"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWater"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_message_content2" />


            <TextView
                    android:id="@+id/goal_water"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_right_corners"
                    android:backgroundTint="@color/colorWater"
                    android:paddingVertical="@dimen/elevation_all"
                    android:text="@string/foodie_example_water"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_message_content"
                    app:layout_constraintEnd_toEndOf="@+id/text_message_content2"
                    app:layout_constraintHorizontal_bias="0.52"
                    app:layout_constraintStart_toStartOf="@+id/text_message_content2"
                    app:layout_constraintTop_toTopOf="@+id/diff_water"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_nutrition_represent"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_message_content"
                    app:layout_constraintEnd_toStartOf="@+id/goal_water"
                    app:layout_constraintStart_toStartOf="@+id/diff_water"
                    app:layout_constraintTop_toBottomOf="@+id/goal_water" />

            <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_goal_number"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_message_content"
                    app:layout_constraintEnd_toEndOf="@+id/goal_water"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/goal_water"
                    app:layout_constraintTop_toBottomOf="@+id/goal_water" />

            <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_average_contribution"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_message_content"
                    app:layout_constraintEnd_toEndOf="@+id/diff_water"
                    app:layout_constraintStart_toEndOf="@+id/goal_water"
                    app:layout_constraintTop_toBottomOf="@+id/goal_water" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>