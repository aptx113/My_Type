<resources>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <!--<style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <!--<style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorMyType</item>
        <item name="colorSecondary">@color/colorMyType</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>


    <style name="MyFloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
    </style>

    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/colorMyType</item>
    </style>

    <style name="HorizontalBreakLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/_1sdp</item>
        <item name="android:background">@color/colorButton</item>
    </style>


</resources>
